<?xml version='1.0' encoding='utf-8'?>
<!-- context to be used in dev mode only. configure dev starters to use the default context.xml or move this resource to the test resources -->
<Context>
    <!-- disable session persistence across Tomcat restarts -->
    <Manager pathname=""/>

    <!-- disable jar scanning for web fragments, annotations and tag libraries -->
    <JarScanner>
        <JarScanFilter defaultPluggabilityScan="false" pluggabilitySkip="*" pluggabilityScan="" defaultTldScan="false"/>
    </JarScanner>
</Context>
